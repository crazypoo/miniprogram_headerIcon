.container {
    margin: 0;
    padding: 0;
}

.header {
    width: 96%;
    display: flex;
    align-items: center;
}

.header-image {
    width: 36rpx;
    height: 36rpx;
}

.body {
    background-image: url(http://api.dudubk.cn/api/img/acg.php);
    width: 100%;
    height: 100%;
    display: flex;
     background-size: 100% 100%;
    justify-content: center;
}

.body-image-container {
    width: 94%;
    margin-top: 140rpx;
    display: flex;
    justify-content: space-between;
}

.body-image {
    width: 324rpx;
    height: 324rpx;
    border: solid 10rpx white;
    border-radius: 20rpx;
}

.footer {
    width: 100%;
    background-color: white;
    position: fixed;
    height: 110rpx;
    bottom: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
}

.footer-body {
    width: 80%;
    height: 110rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    opacity: 0.9;
}

.footer-container {
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.footer-icon {
    width: 42rpx;
    height: 42rpx;
}

.footer-title {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
}
