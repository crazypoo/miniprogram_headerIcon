.translator-wrapper {
    position: relative;
    width: 100vw;
    height: 100vh;
}

.background {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
}

.translator-container {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.man-lang-bar {
    position: relative;
    margin: 75rpx 56.25rpx;
    background: white;
    border-radius: 112.5rpx;
    box-shadow: 0 0 0 22.5rpx rgba(255,255,255,0.35);
    display: flex;
    justify-content: center;
    align-items: center;
}

.change-lang {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    top: 29%;
    right: 0;
    bottom: 0;
    width: 0rpx;
    margin-right: 35.5rpx;
}

.change-lang-icon {
    width: 67.5rpx;
    height: 56.25rpx;
}

.change-lang-text {
    margin-top: 7.5rpx;
    font-size: 30rpx;
    text-align: center;
}

.man-lang-text {
    font-size: 45rpx;
    width: 340rpx;
}

.man-image {
    width: 187.5rpx;
    height: 90%;
    margin-top: 20rpx;
}

.pets-lang-bar {
    position: relative;
    margin: 75rpx 56.25rpx;
    background: white;
    border-radius: 112.5rpx;
    box-shadow: 0 0 0 22.5rpx rgba(255,255,255,0.35);
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 67.5rpx;
}

.pets-lang-text {
    font-size: 45rpx;
}

.audio-wrapper {
    background: white;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 35rpx 180rpx 35rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}

.audio-button {
    border-radius: 112.5rpx;
    width: 300rpx;
    height: 72rpx;
    color: white;
    margin: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
}

.play-icon {
    width: 35rpx;
    margin-left: 15rpx;
}

.pets-icon {
    width: 46rpx;
    height: 72rpx;
    margin-right: 15rpx;
}

.audio-text {
    width: 160rpx;
    text-align: center;
}

.bg-inactive-style {
    background: #FFB4C4;
}

.bg-active-style {
    background: #FF95AC;
}