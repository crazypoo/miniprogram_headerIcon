.container {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    width: 100%;
    margin-left: 20rpx;
    position: fixed;
    top: 0;
    background-color: white;
}

.header-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 6rpx;
}

.header-image {
    width: 36rpx;
    height: 36rpx;
}

.header-title {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #333333;
}

.body {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 136rpx;
}

.body-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.body-list-container {
    width: 710rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 20rpx;
}

.body-list-image {
    width: 344rpx;
    height: 344rpx;
    border-radius: 36rpx;
}

.show-more {
    font-size: 26rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 20rpx;
    color: #b7b7b7;
}

.footer {
    width: 100%;
    background-color: white;
    position: fixed;
    height: 110rpx;
    bottom: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
}

.footer-body {
    width: 80%;
    height: 110rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    opacity: 0.9;
}

.footer-container {
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.footer-icon {
    width: 42rpx;
    height: 42rpx;
}

.footer-title {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
}

.back-top {
    width: 112rpx;
    height: 113rpx;
    position: fixed;
    right: 20rpx;
    bottom: 180rpx;
}

.back-top image {
    width: 112rpx;
    height: 113rpx;
}